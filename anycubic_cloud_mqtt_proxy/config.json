{
  "name": "Anycubic Cloud MQTT Proxy",
  "version": "0.2.15",
  "slug": "anycubic_cloud_mqtt_proxy",
  "description": "Proxy entre o MQTT da nuvem Anycubic e o MQTT local do Home Assistant.",
  "arch": ["aarch64", "amd64", "armv7"],
  "startup": "services",
  "boot": "auto",
  "init": false,
  "map": ["config:rw", "ssl:rw"],
  "options": {
    "access_token": "",
    "log_level": "INFO",
    "local_mqtt_username": "",
    "local_mqtt_password": "",
    "local_mqtt": {
      "host": "core-mosquitto",
      "port": 1883,
      "username": "",
      "password": "",
      "base_topic": "anycubic_cloud_proxy"
    },
    "allow_publish_prefix": "anycubic/anycubicCloud/v1/printer/public/",
    "subscribe_local_topics": [
      "anycubic_cloud_proxy/to_cloud/raw",
      "anycubic_cloud_proxy/to_cloud/publish/#"
    ],
    "ssl_cert_dir": "/ssl/anycubic"
  },
  "schema": {
    "access_token": "str",
    "log_level": "list(DEBUG|INFO|WARNING|ERROR)",
    "local_mqtt_username": "str",
    "local_mqtt_password": "str",
    "local_mqtt": {
      "host": "str",
      "port": "int",
      "username": "str",
      "password": "str",
      "base_topic": "str"
    },
    "allow_publish_prefix": "str",
    "subscribe_local_topics": ["str"],
    "ssl_cert_dir": "str"
  }
}
